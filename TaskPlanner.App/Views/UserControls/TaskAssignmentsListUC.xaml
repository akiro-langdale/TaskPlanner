<UserControl
    x:Class="TaskPlanner.App.Views.UserControls.TaskAssignmentsListUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskPlanner.App.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Command="{Binding AddCommand}"
                Content="Добавить"
                Foreground="Green" />
            <Button
                Width="100"
                Margin="5"
                Command="{Binding EditCommand}"
                CommandParameter="{Binding CurrentPeople}"
                Content="Изменить" />
            <Button
                Width="100"
                Margin="5"
                Command="{Binding RemoveCommand}"
                CommandParameter="{Binding CurrentPeople}"
                Content="Удалить"
                Foreground="DarkRed" />
        </StackPanel>
        <ListView
            Grid.Row="1"
            BorderThickness="2"
            ItemsSource="{Binding Peoples}"
            SelectedItem="{Binding CurrentPeople, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="auto"
                        DisplayMemberBinding="{Binding TaskAssignmentId}"
                        Header="Идентификатор" />
                    <GridViewColumn
                        Width="auto"
                        DisplayMemberBinding="{Binding TaskId}"
                        Header="Задача" />
                    <GridViewColumn
                        Width="auto"
                        DisplayMemberBinding="{Binding UserId}"
                        Header="Пользователь" />
                    <GridViewColumn
                        Width="auto"
                        DisplayMemberBinding="{Binding AssignedAt, StringFormat='{}{0:dd.MM.yyyy}'}"
                        Header="Время назначенния" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
