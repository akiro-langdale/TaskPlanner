<Window
    x:Class="TaskPlanner.App.Views.Windows.AddEditUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskPlanner.App.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавление/изменение записи"
    Width="600"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="auto" SharedSizeGroup="Labels" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,35,15,0"
            Text="Идентификатор" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,15,15,0"
            Text="Username" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,15,15,0"
            Text="Password" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,15,15,0"
            Text="Telegram" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,15,15,0"
            Text="Discord" />
        
        <TextBox
            Grid.Row="0"
            Grid.Column="2"
            Margin="0,35,0,0"
            IsReadOnly="True"
            Text="{Binding CurrentUser.Id, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,15,0,0"
            Text="{Binding CurrentUser.Username, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            Margin="0,15,0,0"
            Text="{Binding CurrentUser.PasswordHash, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Row="3"
            Grid.Column="2"
            Margin="0,15,0,0"
            Text="{Binding CurrentUser.Telegramm, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Row="4"
            Grid.Column="2"
            Margin="0,15,0,0"
            Text="{Binding CurrentUser.Discord, UpdateSourceTrigger=PropertyChanged}" />

        <Button
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,25,0,0"
            HorizontalAlignment="Left"
            Command="{Binding CloseCommand}"
            Content="Отменить"
            Foreground="DarkRed" />
        <Button
            Grid.Row="5"
            Grid.Column="2"
            Margin="0,25,0,0"
            HorizontalAlignment="Right"
            Command="{Binding SaveAndCloseCommand}"
            Content="Сохранить"
            Foreground="Green" />
    </Grid>
</Window>
